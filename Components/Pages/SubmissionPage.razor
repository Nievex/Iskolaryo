@page "/club-submission"

<PageTitle>Club Submission Form</PageTitle>

<section class="club-submission-section">
    <div class="submission-container">
        <div class="submission-header clubs-header">
            <p>Submission form</p>
        </div>

        <form>
            <div class="form-container">
                <div class="field">
                    <label for="lname">Last Name:</label>
                    <input type="text" name="lname" />
                </div>

                <div class="field">
                    <label for="fname">First Name:</label>
                    <input type="text" name="fname" />
                </div>

                <div class="field">
                    <label for="year-section">Year & Section:</label>
                    <input type="text" name="year-section" />
                </div>

                <div class="field">
                    <label for="lname">Address:</label>
                    <input type="text" name="address" />
                </div>

                <div class="field">
                    <label for="lname">Phone number:</label>
                    <input type="text" name="lname" />
                </div>

                <div class="field">
                    <label for="gender">Select your gender:</label>
                    <select id="gender" name="gender" class="gender-select">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>

            <div class="field">
                <label>Why do you want to join this club?</label>
                <textarea></textarea>
            </div>

            <div class="submit-btn-container">
                <input type="submit" class="submit-btn" value="Submit" />
            </div>
        </form>
    </div>
</section>

