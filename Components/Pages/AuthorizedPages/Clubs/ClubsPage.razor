@code {
    private List<Club>? clubList;
    protected override async Task OnInitializedAsync()
    {
        string loadClubSQL = @"SELECT c.*, u.FirstName, u.LastName FROM club_list c INNER JOIN users.users u ON c.ModeratorID = u.ID WHERE c.isFeatured = 1; ";
        clubList = (List<Club>)await dbAccess.LoadSingleJointData<Club, Member>(loadClubSQL, (club, member) =>
        {
            Console.WriteLine(club);
            club.Moderator = member;
            return club;
        }, _config.GetConnectionString("clubs"), "ModeratorID");

        foreach(var club in clubList)
        {
            Console.WriteLine(club.Moderator.Name);
        };
    }
}